<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuna.canarit.UserChangeInfoView">

    <ImageButton
        android:id="@+id/ibChangeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="40dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/changeinfo"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="37dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <!-- First Row -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF333333"
                android:gravity="left"
                android:text="User"
                android:textColor="#f2f2f2"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/trUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFBB431"
                android:gravity="left"
                android:textColor="#FF333333"
                android:textSize="16dp" />


        </TableRow>

        <!-- First Row -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF333333"
                android:gravity="left"
                android:text="Password"
                android:textColor="#f2f2f2"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/trPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFBB431"
                android:gravity="left"
                android:inputType="textPassword"
                android:textColor="#FF333333"
                android:textSize="16dp" />


        </TableRow>

        <!-- Second Row -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF333333"
                android:gravity="left"
                android:text="First Name"
                android:textColor="#f2f2f2"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/trFirstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFBB431"
                android:gravity="left"
                android:textColor="#FF333333"
                android:textSize="16dp" />

        </TableRow>

        <!-- Second Row -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF333333"
                android:gravity="left"
                android:text="Last Name"
                android:textColor="#f2f2f2"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/trLastName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFBB431"
                android:gravity="left"
                android:textColor="#FF333333"
                android:textSize="16dp" />

        </TableRow>

        <!-- Second Row -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF333333"
                android:gravity="left"
                android:text="Phone"
                android:textColor="#f2f2f2"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/trPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFBB431"
                android:gravity="left"
                android:textColor="#FF333333"
                android:textSize="16dp" />

        </TableRow>

        <!-- Second Row -->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF333333"
                android:gravity="left"
                android:text="Email"
                android:textColor="#f2f2f2"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/trEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFBB431"
                android:gravity="left"
                android:textColor="#FF333333"
                android:textSize="16dp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/tvAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to save changes"
        app:layout_constraintRight_toLeftOf="@+id/ibChangeInfo"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/ibChangeInfo" />

    <TextView
        android:id="@+id/tvUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout1"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/tableLayout1"
        android:layout_marginBottom="4dp" />

</android.support.constraint.ConstraintLayout>
